{
  "manifest_version": 2,
  "name": "Bluesky downloader",
  "version": "1.1.1",
  "description": "Video and image downloader for bluesky",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["*://*.bsky.app/*", "storage"],
  "browser_action": {
    "default_icon": "icons/48.png",
    "default_title": "Bluesky downloader"
  },
  "background": {
    "scripts": [
      "lib/ffmpeg.min.js",
      "lib/ffmpeg-core.js",
      "js/video-downloader.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.bsky.app/*"],
      "js": ["lib/progressbar.min.js", "js/classes.js", "js/content.js"]
    }
  ],
  "web_accessible_resources": ["data/*", "lib/*", "icons/*"],
  "content_security_policy": "script-src 'self';"
}
